#!/usr/bin/env groovy

@Library('jenkins-shared-library')
def gv
def PROJECT_PATH = "./project"
def repName = "192.168.88.14:8083"
def imgName= "java-maven-app:4.0"

pipeline{
    agent any
    tools {
        maven 'Maven'
    }
    stages{
        stage("init") {
            steps {
                script {
                    gv = load "script.groovy"
                }
            }
        }
        stage("get sources") {
            steps{
                script {
                    gv.getSrc("${PROJECT_PATH}")
                }
            }
        }
        stage("build jar") {
            steps{
                script {
                    buildJar("${PROJECT_PATH}")
                }
            }
        }
        stage("build image") {
            steps{
                script {
                    buildImage("${repName}", "${imgName}", "${PROJECT_PATH}")
                }
            }
        }
        stage("deploy") {
            steps{
                script {
                    gv.deployApp()
                }
            }
        }
    }
}
